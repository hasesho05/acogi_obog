{
  "hooks": {
    "PreCompact": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/save-work-report.sh",
            "timeout": 30
          }
        ]
      }
    ]
  },
  "permissions": {
    "defaultMode": "bypassPermissions",
    "deny": [
      "Bash(sudo:*)",
      "Bash(su:*)",
      "Bash(doas:*)",
      "Bash(curl:*)",
      "Bash(wget:*)",
      "Bash(nc:*)",
      "Bash(netcat:*)",
      "Bash(telnet:*)",
      "Bash(ssh:*)",
      "Bash(scp:*)",
      "Bash(rsync:*)",
      "Bash(bash -c:*)",
      "Bash(sh -c:*)",
      "Bash(eval:*)",
      "Bash(exec:*)",
      "Bash(firebase deploy:*)",
      "Bash(gcloud:*)",
      "Bash(npm publish:*)",
      "Bash(pnpm publish:*)",
      "Edit(/etc/**)",
      "Read(/etc/passwd)",
      "Read(/etc/shadow)",
      "Bash(kill:*)",
      "Bash(killall:*)",
      "Bash(pkill:*)"
    ],


    "allow": [
      "Bash(make:*)",
      "Bash(pnpm:*)",
      "Bash(npm run:*)",
      "Bash(flutter:*)",
      "Bash(firebase emulators:*)",
      "Edit(apps/**)",
      "Edit(packages/**)",
      "Edit(configs/**)",
      "Read(**)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git status)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(git branch:*)",
      "Bash(git checkout:*)",
      "Bash(git pull:*)",
      "Bash(node:*)",
      "Bash(tsc:*)",
      "Bash(eslint:*)",
      "Bash(prettier:*)"
    ]
  },
  "includeCoAuthoredBy": false,
  "env": {
    "DISABLE_TELEMETRY": "1",
    "DISABLE_ERROR_REPORTING": "1",
    "DISABLE_BUG_COMMAND": "1",
    "NODE_ENV": "development"
  }
}
